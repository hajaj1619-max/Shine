    <script>
        const CONFIG = {
            PASSWORD: "2024", 
            STORAGE_KEY: "secure_session_v2",
            DEVICE_KEY: "device_fingerprint",
            EXPIRY_HOURS: 24
        };

        function getFingerprint() {
            return btoa(navigator.userAgent + screen.width + navigator.language);
        }

        function validateLogin() {
            const pass = document.getElementById('passwordField').value;
            const currentFingerprint = getFingerprint();
            const storedFingerprint = localStorage.getItem(CONFIG.DEVICE_KEY);

            if (pass === CONFIG.PASSWORD) {
                // ูุธุงู ุงูุฌูุงุฒ ุงููุงุญุฏ
                if (storedFingerprint && storedFingerprint !== currentFingerprint) {
                    document.getElementById('login-gate').style.display = 'none';
                    document.getElementById('device-blocker').style.display = 'flex';
                    return;
                }

                if (!storedFingerprint) {
                    localStorage.setItem(CONFIG.DEVICE_KEY, currentFingerprint);
                }

                // ุญูุธ ุงูุฌูุณุฉ ููุฏุฉ 24 ุณุงุนุฉ
                const session = {
                    active: true,
                    expires: new Date().getTime() + (CONFIG.EXPIRY_HOURS * 60 * 60 * 1000)
                };
                localStorage.setItem(CONFIG.STORAGE_KEY, JSON.stringify(session));
                unlock();
            } else {
                const err = document.getElementById('error-msg');
                err.style.display = 'block';
                document.querySelector('.login-card').classList.add('shake');
                setTimeout(() => document.querySelector('.login-card').classList.remove('shake'), 400);
            }
        }

        function unlock() {
            document.getElementById('login-gate').style.display = 'none';
            document.getElementById('main-content').style.display = 'block';
            window.scrollTo(0,0);
        }

        window.onload = () => {
            const sessionData = JSON.parse(localStorage.getItem(CONFIG.STORAGE_KEY));
            const storedFingerprint = localStorage.getItem(CONFIG.DEVICE_KEY);
            const currentFingerprint = getFingerprint();

            if (sessionData && sessionData.active) {
                if (new Date().getTime() < sessionData.expires) {
                    if (storedFingerprint === currentFingerprint) {
                        unlock();
                    } else {
                        document.getElementById('login-gate').style.display = 'none';
                        document.getElementById('device-blocker').style.display = 'flex';
                    }
                } else {
                    localStorage.removeItem(CONFIG.STORAGE_KEY);
                }
            }
        };

        // ๐ก๏ธ ุฃููู ุญูุงูุฉ Frontend
        document.addEventListener('contextmenu', e => e.preventDefault());
        document.addEventListener('keydown', e => {
            if (e.ctrlKey && (e.key === 'c' || e.key === 'u' || e.key === 's' || e.key === 'p' || e.key === 'a')) e.preventDefault();
            if (e.key === 'F12' || (e.ctrlKey && e.shiftKey && e.key === 'I')) e.preventDefault();
        });
        document.addEventListener('dragstart', e => e.preventDefault());

        // ุชูููู ุนูุฏ ุงูุฎุฑูุฌ ูู ุงูุตูุญุฉ (Screenshot protection)
        window.onblur = () => { document.body.style.filter = "blur(15px)"; }
        window.onfocus = () => { document.body.style.filter = "none"; }
    </script>
